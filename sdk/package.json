{
  "name": "@legasi/agent-sdk",
  "version": "0.1.0",
  "description": "TypeScript SDK for AI agents to interact with Legasi Protocol - DeFi lending infrastructure for autonomous agents",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src/",
    "test": "jest",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "solana",
    "defi",
    "lending",
    "ai-agent",
    "x402",
    "legasi",
    "anchor"
  ],
  "author": "Legasi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/legasi-fi/legasi-agent-sdk"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.30.1",
    "@solana/web3.js": "^1.95.5",
    "@solana/spl-token": "^0.4.9"
  },
  "devDependencies": {
    "@types/node": "^22.12.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3"
  },
  "peerDependencies": {
    "@coral-xyz/anchor": ">=0.29.0",
    "@solana/web3.js": ">=1.90.0"
  },
  "engines": {
    "node": ">=18"
  }
}
